          "cmd": "node",
          "args": true
        },
        {
          "name": "cargo",
          "cmd": "cargo",
          "args": true
        },
        {
          "name": "python",
          "cmd": "python",
          "args": true
        },
        {
          "name": "pip",
          "cmd": "pip",
          "args": true
        },
        {
          "name": "mkdir",
          "cmd": "mkdir",
          "args": true
        }
      ]
    }
  ]
}